@model Roflan.Models.LoginViewModel

@{
    ViewBag.Title = "Login - to continue using web";
}

@using (Html.BeginForm("Login", "Authorize", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container-fluid">
        <div class="row text-center">
            <h1>Login</h1>
            <div class="form-group">
                <label for="password" class="col-sm-5 control-label">Email</label>
                <div class="col-sm-4">
                    <input type="text" name="Email" placeholder="Email" class="form-control">
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                <label for="Confirm Password" class="col-sm-5 control-label">Password</label>
                <div class="col-sm-4">
                    <input type="password" name="Password" placeholder="Password" class="form-control">
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <button type="submit" class="btn btn-danger">Login</button>
        </div>
    </div>
}

